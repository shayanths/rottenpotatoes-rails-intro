-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :id => 'ratings_form', :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", "rating_#{rating}", if params[:ratings]; params[:ratings].include?(rating) else true end, :id => "rating_#{rating}"
  = submit_tag 'Refresh', :id => 'ratings_submit'
%table#movies
  %thead
    %tr
      %th#title_header= link_to "Movie Title", :sort=>"title", :id => "title_header"
      %th Rating
      %th#release_date_header= link_to "Release Date", :sort=>"release_date", :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path


